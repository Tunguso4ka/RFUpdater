<Window x:Class="RFUpdater.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RFUpdater"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="Loading..." Height="340" Width="300">
    
    <Border BorderBrush="#7b2cbf" BorderThickness="3">
        <StackPanel Background="#10002b">
            <ProgressBar IsIndeterminate="True" BorderBrush="Transparent" Background="Transparent" Foreground="AliceBlue" Height="10"/>
            <Image Source="/Resources/rfulogo0525.png" />
            <StackPanel Orientation="Horizontal">
                <Button Content="" x:Name="PauseBtn" Style="{StaticResource ButtonStylePink}" FontFamily="Segoe MDL2 Assets"/>
                <TextBox Text="Street Phenomena - Sentimental War" Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
